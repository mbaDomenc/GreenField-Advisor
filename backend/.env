# ===============================
# DATABASE
# ===============================
MONGO_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER_URL>/<DB_NAME>?retryWrites=true&w=majority
MONGO_DB=homegardening


# ===============================
# AUTHENTICATION / SECURITY
# ===============================
JWT_SECRET=change-me-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
SECRET_KEY=change-me-production-secret


# ===============================
# AI CONFIGURATION (OPENROUTER)
# ===============================
HF_API_KEY=sk-or-your-openrouter-api-key


# ===============================
# AI CONFIGURATION (GOOGLE - OPTIONAL)
# ===============================
# Uncomment only if you enable Google AI
# GOOGLE_API_KEY=your-google-api-key


# ===============================
# SERVER SETTINGS
# ===============================
HOST=0.0.0.0
PORT=8000
UPLOAD_DIR=./uploads
MAX_UPLOAD_MB=5
CORS_ORIGINS=http://localhost:3000,http://localhost:5173


# ===============================
# WEATHER SERVICE
# ===============================
WEATHER_TTL_SECONDS=1800
WEATHER_GRID_PRECISION=2


# ===============================
# FRONTEND (MAPS)
# ===============================
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
